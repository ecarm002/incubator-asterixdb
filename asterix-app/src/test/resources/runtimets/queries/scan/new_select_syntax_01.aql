/* scan and print a delimited text file */
drop dataverse test if exists;
create dataverse test;
use dataverse test;

create type DBLPType as open {
  id: int32, 
  dblpid: string,
  title: string,
  authors: string,
  misc: string
}

create dataset DBLP1(DBLPType) 
  partitioned by key id;

load dataset DBLP1
using "edu.uci.ics.asterix.external.dataset.adapter.NCFileSystemAdapter"
(("path"="nc1://data/dblp-small/dblp-small-id.txt"),("format"="delimited-text"),("delimiter"=":"));


write output to nc1:"rttest/scan_new_select_syntax_01.adm";

from dataset('DBLP1') as $paper
with $paperid as $paper.id
order by $paperid
return $paper
